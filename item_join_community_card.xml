<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/colorPrimary">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Community Image -->
        <ImageView
            android:id="@+id/communityImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_edittext"
            android:src="@drawable/ic_upload_placeholder"
            android:contentDescription="Community image"
            android:layout_marginEnd="12dp" />

        <!-- Text Info Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Community Name -->
            <TextView
                android:id="@+id/communityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community Name"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />

            <!-- Members Joined -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/membersJoined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 members joined"
                    android:textColor="@color/silver"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_members"
                    android:contentDescription="members icon" />
            </LinearLayout>

            <!-- Join Now -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/joinNowLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join now"
                    android:textColor="@color/silver"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_bulb"
                    android:contentDescription="join now icon" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
