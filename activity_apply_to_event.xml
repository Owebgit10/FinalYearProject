<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarApplyToEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:title="Apply to this Event"
            android:titleTextColor="@android:color/white"
            android:navigationIcon="@drawable/ic_back_arrow" />

        <EditText
            android:id="@+id/firstNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/gold"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/lastNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/gold"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:enabled="false"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/gold"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/gold"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Why would you like to apply? (optional)"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/gold"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textMultiLine"/>

        <EditText
            android:id="@+id/spacesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Spaces you would like 2 book"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/gold"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="number"/>

        <Button
            android:id="@+id/applyNowButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Application"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/gold"/>
    </LinearLayout>
</ScrollView>
